<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
		<!-- Listener to initialize Spring and Hibernate on first Servlet request -->

	<listener>
		<listener-class>
			hu.gwsystems.dnsman.DnsContextListener
		</listener-class>
	</listener>

	<servlet>
		<servlet-name>loginServlet</servlet-name>
		<servlet-class>hu.gwsystems.dnsman.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginServlet</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>registerServlet</servlet-name>
		<servlet-class>hu.gwsystems.dnsman.servlets.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>registerServlet</servlet-name>
		<url-pattern>/register.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>transferServlet</servlet-name>
		<servlet-class>hu.gwsystems.dnsman.servlets.TransferListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>transferServlet</servlet-name>
		<url-pattern>/transfer</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>domainListServlet</servlet-name>
		<servlet-class>hu.gwsystems.dnsman.servlets.DomainListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>domainListServlet</servlet-name>
		<url-pattern>/domainList.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>registerDomainServlet</servlet-name>
		<servlet-class>hu.gwsystems.dnsman.servlets.RegisterDomainServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>registerDomainServlet</servlet-name>
		<url-pattern>/registerDomain.do</url-pattern>
	</servlet-mapping>
</web-app>
